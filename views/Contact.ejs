<%- include("./partials/header") %>
<%- include("./partials/navbar") %>

<link rel="Stylesheet" href="/css/contact.css">

<br><br><br>

  <div class="myDiv container mt-4">
    <div class="row">
      <div >
        <div class="maincontent" >
          <h1>Send us feedback <img src="/images/mail.png" height="30px" width="30px"></h1>
          <br>
          <form class="feedback-form" action="/Contact" method="POST">

            <div class="form-group">
              <label for="feedback-form-name">Name</label>
              <input type="text" name="name" class="form-control" id="feedback-form-name" placeholder="Enter your name">
            </div>

            <div class="form-group">
              <label for="feedback-form-email">E-Mail</label>
              <input type="text" name="email" type="email" required class="form-control" id="feedback-form-email" placeholder="Enter your email address">
            </div>

            <div class="form-group">
              <label for="feedback-form-title">Title</label>
              <input type="text" name="subject" class="form-control" id="feedback-form-title" placeholder="Title of your feedback">
            </div>
            
            <div class="form-group">
              <label for="feedback-form-message">Message</label>
              <textarea type="text" name="text" placeholder="Enter your message, then hit the submit button" class="form-control"
                id="feedback-form-message" rows="6"></textarea>
            </div>

            <button type="submit" class="btn btn-success float-right">Submit</button>
          </form>
        </div>
      </div>
    </div> 
  </div>      

  

  
