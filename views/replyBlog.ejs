<%- include("./partials/header") %>
<%- include("./partials/navbar") %>


<div class="container mt-5">
    
    <h3 class="my-3" style="margin-left: 6%; ">Commet Your Answer ...  </h3>

    <div class="card border-dark mb-3 mt-5" style="max-width: 60rem; margin-left: 6%; ">
      <div class="card-header" style="background-color: #004e89; color: rgba(255, 255, 255, 0.712);">
        <span style="float: left; padding-right: 7px;"> <img src="/images/user.png" height="25px" width="25px"></span> <%= blog.creator %> <span style="float: right;">Posted: <%= blog.postedAt.toString().slice(0,15) %> at <%= blog.postedAt.toString().slice(15,24) %> </span></div>
        <div class="card-body text-dark">
          <h5 class="card-title"><%= blog.title %></h5>
          <p class="card-text"><%= blog.content %></p>
        </div>
      </div>
  
    <form action="/reply/<%=blog.id%> " method="POST">
        <textarea name="content" style="width:60rem; margin-left: 6%; " cols="10" rows="10" class="mt-3 form-control" placeholder="Enter Content Here..."
            required></textarea>
        <input type="submit" style="margin-left: 54rem;" value="Add Comment" class="mt-5 btn btn-md btn-success">
    </form>
    <br>
</div>

<%- include("./partials/footer") %>
