<%- include("./partials/header") %>
<%- include("./partials/navbar") %>


<link rel="Stylesheet" href="/css/parti_blog.css">

<!--#004e89-->
<br>
<div class="myDiv card border-dark mb-3 mt-5">
    <div class="card-header" style="background-color: #004e89; color: rgba(255, 255, 255, 0.712);">
      <span style="float: left; padding-right: 7px;"> <img src="/images/user.png" height="25px" width="25px"></span> <%= blog.creator %> <span style="float: right;">Posted: <%= blog.postedAt.toString().slice(0,15) %> at <%= blog.postedAt.toString().slice(15,24) %> </span></div>
    <div class="card-body text-dark">
      <h5 class="card-title"><%= blog.title %></h5>
      <p class="card-text"><%= blog.content %></p>
      <br>
      <a href=" /reply/<%= blog._id %>" class="btn btn-success" style="float: right;">Answer</a>
    </div>
    
  </div>
  <br>
  <span class=" Replies">
  <img  src="/images/comments.png" height="25px" width="25px">
  <span style="color: purple; font-weight: 400;"  ><u>Replies</u></span>
  </span>
 
   
  <% for(var i=blog.ans.length-1; i>=0 ; i--) { %>
    <div class="ansDiv myDiv card border-dark mb-3 mt-5">
    <div class="card-header"><span style="float: left; padding-right: 7px;"> <img src="/images/user.png" height="25px" width="25px"></span><%= blog.ans[i].ansBy %> </span> <span style="float: right;">On <%= blog.ans[i].time.toString().slice(0,15) %> at <%= blog.ans[i].time.toString().slice(15,24) %></span></div>
    <div class="card-body text-dark">
      
      <p class="card-text"><%= blog.ans[i].answer %></p>
    </div>
    </div>
<% } %>

  

      

<%- include("./partials/footer") %>